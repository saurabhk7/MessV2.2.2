<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.saurabh.mess2.PaymentActivity">

    <Button
        android:text="Continue With Payment"
        android:textColor="@color/BackgroundWhiteColor"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/paymentBtn"
        android:background="@drawable/signup_button"
        android:elevation="0dp"
        android:padding="15dp"
        android:visibility="visible"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:text="Need Help? Contact Us"
        android:textSize="15dp"

        android:id="@+id/textView"
        android:textColor="@color/BackgroundWhiteColor"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_width="40dp"
        android:layout_height="1dp"
        android:background="@color/BackgroundWhiteColor"
        android:layout_above="@+id/PaymentAmtTxtView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <TextView
        android:text="Total Amount: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/BackgroundWhiteColor"
        android:textStyle="normal|bold"
        android:textSize="25dp"

        android:id="@+id/PaymentAmtTxtView"
        android:layout_above="@+id/paymentBtn"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/BackgroundWhiteColor"
        android:textStyle="normal|bold|italic"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/PaymentAmtTxtView"
        android:layout_toEndOf="@+id/textView"
        android:id="@+id/CostTxtView"
        android:textAlignment="textEnd" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Name:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView13"
                android:textSize="25sp"
                android:layout_marginTop="15dp"
                android:textStyle="normal|bold|italic"
                android:paddingRight="20dp" />

            <TextView
                android:text="Saurabh Kshirsagar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/NameTextView"
                android:textSize="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Email ID:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView14"

                android:layout_marginTop="15dp"
                android:textSize="25sp"
                android:textAlignment="viewStart"
                android:textStyle="normal|bold|italic"
                android:paddingRight="20dp" />

            <TextView
                android:text="Email ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/NameTextView"
                android:id="@+id/EmailTextView"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Contact:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView15"

                android:textSize="25sp"
                android:layout_marginTop="15dp"
                android:textStyle="normal|bold|italic"
                android:textAlignment="viewStart"
                android:paddingRight="20dp" />

            <EditText
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:layout_below="@+id/EmailTextView"
                android:layout_alignParentStart="true"
                android:id="@+id/ContactEditText"
                android:textSize="25sp"
                android:layout_marginTop="15dp"
                android:hint="8408845374"
                android:layout_width="match_parent"
                 />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
