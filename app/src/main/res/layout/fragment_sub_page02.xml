<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".SubPage02">



    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_height="wrap_content"
        android:id="@+id/backgroundImageView"
        android:layout_width="wrap_content"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/optimized_blurbackground2"
        android:visibility="invisible" />

    <com.example.saurabh.mess2.RalewayReg
        android:text="Today's Mess : ................"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TodaysMessTxtView"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_above="@+id/QRCodeImageView"
        android:layout_centerHorizontal="true"
        android:paddingBottom="20dp"
        android:textColor="@color/BackgroundWhiteColor" />

    <ImageView
        android:layout_width="270dp"
        android:layout_height="270dp"

        android:id="@+id/QRCodeImageView"
        android:cropToPadding="false"
        android:elevation="40dp"
        android:clickable="true"
        android:adjustViewBounds="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="PAY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PayButton"
        android:layout_below="@+id/QRCodeImageView"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />


</RelativeLayout>
